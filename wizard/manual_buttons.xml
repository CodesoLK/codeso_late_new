<?xml version="1.0" encoding="utf-8"?>
<flectra>
     <record id="download_manual_attendence_form" model="ir.ui.view">
         <field name="name">attendence.download.wizard</field>
         <field name="model">attendence.download</field>
         <field name="arch" type="xml">
            <form string="Download Attendence">
                <group>
                    <field name="attendence_date"/>
                </group>
                <footer>
                    <button name="man_download_attendence_wizard" string="Download Selected Date" type="object" class="btn-primary"/>
                    <button name="man_download_attendence_wizard_all" string="Download All Attendence" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
         </field>
     </record>

    <record id="download_manual_attendence_wizard" model="ir.actions.act_window">
        <field name="name">Attendence Download</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">attendence.download</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="download_manual_attendence_form"/>
        <field name="target">new</field>
    </record>

</flectra>